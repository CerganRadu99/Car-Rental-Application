@model Malacar.Models.Station

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/stations-details.css">


<div>
    <br />
    <h2 style="text-align:center; color: #24305E">Station Details</h2>
    <hr />
    <div class="container-fluid">
        <div class="row">
            <div class="col-4">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </div>
            <div class="col-4">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NumberOfVehicles)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumberOfVehicles)
                </dd>
            </div>
            <div class="col-4">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NumberOfEmployees)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumberOfEmployees)
                </dd>
            </div>
        </div>
        </div>
</div>
<div>
    <br />
    <a asp-action="Edit"  asp-route-id="@Model.StationId">
        <img src="~/Images/pencil.png" style="width:4%" alt="Edit">
    </a>
    <a asp-action="Index">
        <img src="~/Images/back-arrow.png" style="width:4%; margin-left:15px" alt="Back to List">
    </a>
</div>
