@model Malacar.Models.Station

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/station-delete.css">
<h3>Delete Station</h3>
<hr />
<div>
    <div class="container-fluid">
        <dl class="row">
            <dt class="col-sm-12 pinkC">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-12">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-12 pinkC">
                @Html.DisplayNameFor(model => model.NumberOfVehicles)
            </dt>
            <dd class="col-sm-12">
                @Html.DisplayFor(model => model.NumberOfVehicles)
            </dd>
            <dt class="col-sm-12 pinkC">
                @Html.DisplayNameFor(model => model.NumberOfEmployees)
            </dt>
            <dd class="col-sm-12">
                @Html.DisplayFor(model => model.NumberOfEmployees)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="StationId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
    <a asp-action="Index"><img src="~/Images/back-arrow.png" style="width:3%; margin-left: 15%" alt="Back to List"></a>
</div>
