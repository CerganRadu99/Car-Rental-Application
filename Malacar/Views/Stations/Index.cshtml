@model IEnumerable<Malacar.Models.Station>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css">
<link rel="stylesheet" href="~/css/Stations.css" />

<p style="margin-top:50px;padding-left: 160px;">
    <a asp-action="Create"><img class="outsideElS" src="~/Images/addButton.png" /></a>
</p>
<div class="card">
    <table class="table">
        <thead>
            <tr class="trA">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfVehicles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfEmployees)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfVehicles)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfEmployees)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.StationId"><img class="imgBtn" src="~/Images/pencil.png"></a>
                        <a asp-action="Details" asp-route-id="@item.StationId"><img class="imgBtn" src="~/Images/detail.png"></a>
                        <a asp-action="Delete" asp-route-id="@item.StationId"><img class="imgBtn" src="~/Images/negative.png"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>