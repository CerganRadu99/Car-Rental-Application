@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Administrator"))
    {
        <li class="nav-item">
            <a id="manage" class="btn btn-primary nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item" style="margin-left:15px;">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-primary btn-link ">Logout</button>
            </form>
        </li>
        <li class="nav-item" style="margin-left:15px;">
            <div class="dropdown show">
                <a class="btn btn-primary dropdown-toggle nav-link" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menu
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" asp-area="" asp-controller="Cars" asp-action="Index">Manage Cars</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Stations" asp-action="Index">Manage Stations</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Addresses" asp-action="Index">Manage Addresses</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Rentals" asp-action="Index">Manage Rentals</a>

                </div>
            </div>
        </li>
    }
    else if (SignInManager.IsSignedIn(User) && User.IsInRole("User"))
    {
        <li class="nav-item">
            <a id="manage" class="btn btn-primary nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item" style="margin-left:15px;">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-primary btn-link ">Logout</button>
            </form>
        </li>
        <li class="nav-item" style="margin-left:15px;">
            <div class="dropdown show">
                <a class="btn btn-primary dropdown-toggle nav-link" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menu
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" asp-area="" asp-controller="Cars" asp-action="Index">Browse Cars</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Stations" asp-action="Index">Browse Stations</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Addresses" asp-action="Index">Hello</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Rentals" asp-action="Index">Hello</a>

                </div>
            </div>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-primary nav-link " id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item" style="margin-left:15px;">
            <a class="btn btn-primary nav-link " id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item" style="margin-left:15px;">
            <div class="dropdown show">
                <a class="btn btn-primary dropdown-toggle nav-link" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menu
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" asp-area="" asp-controller="Cars" asp-action="Index">Browse Cars</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Stations" asp-action="Index">Contact</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Addresses" asp-action="Index">About Us</a>
                </div>
            </div>
        </li>
    }
</ul>
