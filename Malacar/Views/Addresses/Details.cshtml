@model Malacar.Models.Address

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/stations-details.css">


<div>
    <br />
    <h2 style="text-align:center; color: #24305E">Address Details</h2>
    <hr />
    <div class="container-fluid">
        <div class="row">
            <div class="col-3">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Street)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Street)
                </dd>
            </div>
            <div class="col-3">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.City)
                </dd>
            </div>
            <div class="col-3">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.County)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.County)
                </dd>
            </div>
            <div class="col-3">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Zip)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Zip)
                </dd>
            </div>
        </div>
    </div>
</div>
<div>
    <br />
    <a asp-action="Edit" asp-route-id="@Model.AddressId">
        <img src="~/Images/pencil.png" style="width:4%" alt="Edit">
    </a>
    <a asp-action="Index">
        <img src="~/Images/back-arrow.png" style="width:4%; margin-left:15px" alt="Back to List">
    </a>
</div>
